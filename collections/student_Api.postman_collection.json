              "pm.environment.set(\"lastName\", \"User\");\r",
              "pm.environment.set(\"dateOfBirth\", \"01 Jan 2000\");\r",
              "\r",
              "// input validation\r",
              "pm.test(\"First name is not empty\", () => {\r",
              "    pm.expect(pm.environment.get(\"firstName\")).to.not.be.empty;\r",
              "});\r",
              "\r",
              "pm.test(\"DOB is not empty\", () => {\r",
              "    pm.expect(pm.environment.get(\"dateOfBirth\")).to.not.be.empty;\r",
