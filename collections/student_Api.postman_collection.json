              "});\r",
              "\r",
              "pm.test(\"Response is an array\", function () {\r",
              "    pm.expect(res).to.be.an(\"array\");\r",
              "});\r",
              "\r",
              "pm.test(\"New student is created\", function () {\r",
              "    const lastStudent = res[res.length - 1];\r",
              "    pm.expect(lastStudent.id).to.not.be.undefined;\r",
              "});\r",
              "\r",
              "// save ID immediately (no need extra GET)\r",
              "pm.environment.set(\"id\", res[res.length - 1].id);\r",
              ""
